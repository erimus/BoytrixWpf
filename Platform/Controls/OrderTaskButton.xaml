<UserControl x:Class="Boytrix.UI.WPF.Libraries.Platform.Controls.OrderTaskButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
              xmlns:fsc="clr-namespace:FsTaskButton;assembly=FsTaskButton"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <fsc:TaskButton x:Name="TaskButton"
                    Command="{Binding ShowOrderView}" 
                    IsChecked="{Binding IsChecked}"
                    MinWidth="150" 
                    Foreground="Black" 
                    Image="../Resources/Images/Famsilk/icons/layers.png"  
                  
                    Text="Order" 
                    Margin="5,2,5,2" 
                    Background="{Binding Path=Background, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}}" />
</UserControl>
